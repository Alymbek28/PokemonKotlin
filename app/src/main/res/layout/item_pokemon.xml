<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/background_item"
    android:background="@color/orange"
    android:paddingTop="5dp"
    android:paddingHorizontal="5dp"
    android:paddingBottom="4dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/card_v"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="72dp"
        android:layout_height="102dp" >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/pokemonImg"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/pikachu"/>

        <TextView
            android:paddingStart="35dp"
            android:paddingEnd="1dp"
            android:id="@+id/pokemon_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#024"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="@id/card_v"
            app:layout_constraintTop_toTopOf="@id/card_v"/>
    </androidx.cardview.widget.CardView>





    <TextView
        android:id="@+id/nameTv"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pikachu"
        app:layout_constraintEnd_toEndOf="@+id/card_v"
        app:layout_constraintStart_toStartOf="@id/card_v"
        app:layout_constraintTop_toBottomOf="@+id/card_v"/>

</androidx.constraintlayout.widget.ConstraintLayout>